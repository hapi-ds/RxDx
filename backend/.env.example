# RxDx Backend Environment Configuration
# Copy this file to .env and update with your values

# Application
PROJECT_NAME=RxDx
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_STRONG_SECRET_KEY_AT_LEAST_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=rxdx
POSTGRES_PASSWORD=rxdx_password
POSTGRES_DB=rxdx

# Graph Database
AGE_GRAPH_NAME=project_graph

# Email
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAIL_FROM=noreply@rxdx.local
EMAIL_REPLY_TO=support@rxdx.local

# Local LLM
LLM_ENABLED=false
LLM_STUDIO_URL=http://localhost:1234/v1
LLM_MODEL_NAME=local-model

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Audit
AUDIT_LOG_RETENTION_DAYS=3650

# Account Security
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCK_DURATION_HOURS=1
