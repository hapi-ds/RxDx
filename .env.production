# Production Environment Configuration
# IMPORTANT: Update all values before deploying to production!

# Environment
ENVIRONMENT=production

# Database Configuration
POSTGRES_USER=rxdx_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=rxdx_prod
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8000
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
DEBUG=false

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=https://your-domain.com

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# LLM Configuration
LLM_STUDIO_URL=http://llm-server:1234/v1
LLM_MODEL_NAME=production-model
LLM_ENABLED=false

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true
EMAIL_FROM=noreply@your-domain.com
EMAIL_REPLY_TO=support@your-domain.com

# Apache AGE Configuration
AGE_GRAPH_NAME=rxdx_graph

# CORS (restrictive for production)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCK_DURATION_HOURS=1
AUDIT_LOG_RETENTION_DAYS=3650

# Logging
LOG_LEVEL=INFO

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
