# Staging Environment Configuration
# For testing production-like setup before deployment

# Environment
ENVIRONMENT=staging

# Database Configuration
POSTGRES_USER=rxdx_staging
POSTGRES_PASSWORD=staging_password_change_me
POSTGRES_DB=rxdx_staging
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8000
SECRET_KEY=staging_secret_key_change_me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
DEBUG=false

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=https://staging.your-domain.com

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# LLM Configuration
LLM_STUDIO_URL=http://llm-server:1234/v1
LLM_MODEL_NAME=staging-model
LLM_ENABLED=false

# Email Configuration (use test SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-mailtrap-user
SMTP_PASSWORD=your-mailtrap-password
SMTP_TLS=true
EMAIL_FROM=staging@rxdx.local
EMAIL_REPLY_TO=staging@rxdx.local

# Apache AGE Configuration
AGE_GRAPH_NAME=rxdx_graph

# CORS
CORS_ORIGINS=https://staging.your-domain.com

# Security
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCK_DURATION_HOURS=1
AUDIT_LOG_RETENTION_DAYS=365

# Logging
LOG_LEVEL=DEBUG

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
